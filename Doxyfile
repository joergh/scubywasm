# Keep paths readable in generated pages.
FULL_PATH_NAMES        = NO
STRIP_FROM_PATH        = .

# --- Extraction ---
# Extract documented entities from the header.
EXTRACT_ALL            = NO
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO

# --- Formatting / navigation ---
OPTIMIZE_OUTPUT_FOR_C  = YES
JAVADOC_AUTOBRIEF      = YES
